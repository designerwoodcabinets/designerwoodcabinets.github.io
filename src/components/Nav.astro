---
interface Link {
    href: string;
    text: string;
}

const links = [
	// { text: "Inicio", href: "#" },
    { text: "Nosotros", href: "#company" },
    { text: "Servicios", href: "#services" },
    { text: "Proyectos", href: "#projects" },
    { text: "Contacto", href: "#contact"}
];
const menuId = "mobile-menu";
---
<nav
     id={menuId}
     class="relative hidden md:block">
     <ul 
        class="flex lg:flex-row lg:bg-transparent w-full lg:w-auto z-20 lg:z-auto p-4 lg:p-0  lg:gap-0 transition-all duration-300">
        {
            links.map((link: Link) => (
                <li>
                    <a
                        href={link.href}
                        class=" font-sharp_grotesk_light text-sm text-[var(--brand-gray-200)] px-3 py-2 mx-1 block transition duration-200 hover:bg-white/30 hover:text-white"
                    >
                        {link.text}
                    </a>
                </li>
            ))
        }
    </ul>
</nav>