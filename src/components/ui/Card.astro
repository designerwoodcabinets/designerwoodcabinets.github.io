---
import Icon from "@ui/Icon.astro";
import Line from "./Line.astro";

const {
    title,
    icon,
    description
} = Astro.props;
---

<div class="xl:flex items-start gap-4 w-full">
    {icon && (
        <Icon name={icon} className="w-40 h-16 mb-4"/>
    )}
    <div class="w-full">
        <h2 class="text-2xl lg:min-h-20 font-medium pb-1 border-b-2 border-[var(--brand-gray-950)] sm:text-3xl">
            {title}
        </h2>
        <p class="text-base p-4 bg-[var(--brand-gray-50)] sm:text-lg 3xl:text-xl 3xl:leading-normal 3xl:p-6">
            {description}
        </p>
    </div>
</div>